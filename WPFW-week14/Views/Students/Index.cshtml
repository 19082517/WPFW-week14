@model IEnumerable<WPFW_week14.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<div class="d-flex flex-row justify-content-around">
    <form asp-action="Index" method="get">
        <label class="mr-2">Filter op:</label>
        <input type="hidden" name="sortType" value='@ViewData["SortType"]' />
        <input type="hidden" name="sortByOrder" value='@ViewData["SortByOrder"]' />
        <input type="text" name="filter" value="@ViewData["Filter"]" />
        <input type="submit" value="Zoeken" />
    </form>

    <div class="btn-group">
        <label class="mr-2">Sorteer op:</label>
        <div class="btn-group">
            <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                Id
            </button>
            <div class="dropdown-menu">
                <a class="dropdown-item" asp-action="Index" asp-route-SortType="Id" asp-route-SortByOrder="Ascending" asp-route-Filter="@ViewData["Filter"]">Ascending</a>
                <a class="dropdown-item" asp-action="Index" asp-route-SortType="Id" asp-route-SortByOrder="Descending" asp-route-Filter="@ViewData["Filter"]">Descending</a>
            </div>
        </div>
        <div class="btn-group">
            <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                Name
            </button>
            <div class="dropdown-menu">
                <a class="dropdown-item" asp-action="Index" asp-route-SortType="Name" asp-route-SortByOrder="Ascending" asp-route-Filter="@ViewData["Filter"]">Ascending</a>
                <a class="dropdown-item" asp-action="Index" asp-route-SortType="Name" asp-route-SortByOrder="Descending" asp-route-Filter="@ViewData["Filter"]">Descending</a>
            </div>
        </div>
        <div class="btn-group">
            <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                Length
            </button>
            <div class="dropdown-menu">
                <a class="dropdown-item" asp-action="Index" asp-route-SortType="Length" asp-route-SortByOrder="Ascending" asp-route-Filter="@ViewData["Filter"]">Ascending</a>
                <a class="dropdown-item" asp-action="Index" asp-route-SortType="Length" asp-route-SortByOrder="Descending" asp-route-Filter="@ViewData["Filter"]">Descending</a>
            </div>
        </div>
    </div>
</div>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Length)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Length)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
